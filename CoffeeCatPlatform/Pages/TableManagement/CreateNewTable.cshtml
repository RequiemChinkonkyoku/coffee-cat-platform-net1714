@page "/CreateNewTable"
@model CoffeeCatPlatform.Pages.TableManagement.CreateNewTableModel

@{
    ViewData["Title"] = "CreateNewTable";
}

<h1>Create New Table</h1>

<h4>Table</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Table.SeatCount" class="control-label"></label>
                <input asp-for="Table.SeatCount" class="form-control" />
                <span asp-validation-for="Table.SeatCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Table.AreaId" class="control-label"></label>
                <select asp-for="Table.AreaId" class ="form-control" asp-items="ViewBag.AreaId">
                    @foreach (var Area in Model.AreaList)
                    {
                        <option value="@Area.AreaId">
                            @Area.Location
                        </option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
