@page
@model CoffeeCatPlatform.Pages.PromotionPages.IndexModel

@{
}

<h1>Index</h1>

<p>
	<a asp-page="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				Promotion ID
			</th>
			<th>
				Name
			</th>
			<th>
				Description
			</th>
			<th>
				Promotion Type
			</th>
			<th>
				Promotion Amount
			</th>
			<th>
				Actions
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var promotion in Model.Promotions)
		{
			<tr>
				<td>
					@promotion.PromotionId
				</td>
				<td>
					@promotion.Name
				</td>
				<td>
					@promotion.Description
				</td>
				<td>
					@promotion.PromotionType
				</td>
				<td>
					@promotion.PromotionAmount
				</td>
				<td>
					<form method="get" asp-page="./Edit">
						<input type="hidden" name="id" value="@promotion.PromotionId" />
						<button type="submit">Edit</button>
					</form> |
					<form method="post" asp-page-handler="Delete" asp-route-id="@promotion.PromotionId">
						<button type="submit" onclick="return confirm('Are you sure you want to delete this promotion?')">Delete</button>
					</form>
				</td>
			</tr>
		}
	</tbody>
</table>
