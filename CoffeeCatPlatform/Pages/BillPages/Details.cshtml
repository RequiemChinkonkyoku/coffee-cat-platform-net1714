@page
@model CoffeeCatPlatform.Pages.BillPages.DetailsModel
@{
}
<h1>Bill Details</h1>

@if (Model.BillProducts != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Product ID</th>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Price</th>
                @* <th>Promotion</th> *@
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.BillProducts)
            {
            <tr>
                <td>@product.BillId</td>
          
                <td>@product.ProductId</td>
         
                <td>@product.Product.Name</td>
           
                <td>@product.Quantity</td>
          
                <td>@product.Product.Price</td>

                @* <td>@product.Bill.Promotion.Name</td> *@
          
                <td>@((decimal)product.Quantity * product.Product.Price)</td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Details not found.</p>
}
<div>
    <a asp-page="Index">Back to List</a>
</div>