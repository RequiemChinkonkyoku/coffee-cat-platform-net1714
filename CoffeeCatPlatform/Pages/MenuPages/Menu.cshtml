@page "/Menu"
@model CoffeeCatPlatform.Pages.MenuPages.MenuModel
@using Microsoft.AspNetCore.Http
@* <link rel="stylesheet" href="~/css/Menu.css"> *@

@{
    ViewData["Title"] = "Menu";
}

<h1>MENU</h1>

<h2> Drinks </h2>
    <table class="table">
        <thead>
            <tr>
                <th>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Products[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Products[0].Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Products[0].Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Products[0].Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Products[0].productStatus)
                </th>
                <th>
                </th>
            </tr>
        </thead>

        @if (!Model.result)
            {
                <tr>
                    <td>
                        There are no products.
                    </td>
                </tr>
            }
        else
            {
                <tbody>
                    @foreach (var item in Model.Products.Where(i => i.categoryID == 1 ).OrderBy(i => i.Name))
                    {
                        <tr>
                            <td class="image-cell">
                                <img src="@item.ImageUrl" alt="Drink">
                            </td>
                            <td class="content-cell">
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td class="content-cell">
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td class="content-cell">
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td class="content-cell">
                                @Html.DisplayFor(modelItem => item.Quantity)
                            </td>
                            @if (item.productStatus == 1)
                                {
                                    <td>
                                        Avaialble
                                    </td>
                                }
                            else
                                {
                                    <td>
                                        Unavailable
                                    </td>
                                }
                                    <td>
                                            <a asp-page="./MenuEdit" asp-route-id="@item.ProductId">Edit</a> |
                                            <a asp-page="./MenuDelete" asp-route-id="@item.ProductId">Delete</a>
                                    </td>
                        </tr>
                    }
                </tbody>
            }
        </table>
    
<h2> Foods </h2>

<table class="table">
    <thead>
        <tr>
            <th>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].productStatus)
            </th>
            <th>
            </th>
        </tr>
    </thead>

    @if (!Model.result)
    {
        <tr>
            <td>
                There are no products.
            </td>
        </tr>
    }
    else
    {
        <tbody>
            @foreach (var item in Model.Products.Where(i => i.categoryID == 2).OrderBy(i => i.Name))
            {
                <tr>
                    <td class="image-cell">
                        <img src="@item.ImageUrl" alt="Drink">
                    </td>
                    <td class="content-cell">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="content-cell">
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td class="content-cell">
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td class="content-cell">
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    @if (item.productStatus == 1)
                    {
                        <td>
                            Avaialble
                        </td>
                    }
                    else
                    {
                        <td>
                            Unavailable
                        </td>
                    }
                    <td>
                        <a asp-page="./MenuEdit" asp-route-id="@item.ProductId">Edit</a> |
                        <a asp-page="./MenuDelete" asp-route-id="@item.ProductId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    }
</table>

