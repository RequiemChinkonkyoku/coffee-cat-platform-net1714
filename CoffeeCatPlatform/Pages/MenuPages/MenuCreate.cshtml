@page "/MenuCreate"
@model CoffeeCatPlatform.Pages.MenuPages.MenuCreateModel

@{
    ViewData["Title"] = "MenuCreate";
    Layout = "_DashboardLayout";
}

<body class="g-sidenav-show  bg-gray-100">
    <main class="main-content position-relative max-height-vh-100 h-100 mt-1 border-radius-lg ">
        <!-- Navbar -->
        <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur" navbar-scroll="true">
            <div class="container-fluid py-1 px-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
                        <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="javascript:;">Pages</a></li>
                        <li class="breadcrumb-item text-sm text-dark active" aria-current="page">Products</li>
                    </ol>
                    <h6 class="font-weight-bolder mb-0">Create a new product</h6>
                </nav>
                <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4" id="navbar">
                    <div class="ms-md-auto pe-md-3 d-flex align-items-center">
                        <div class="input-group">
                            <span class="input-group-text text-body"><i class="fas fa-search" aria-hidden="true"></i></span>
                            <input type="text" class="form-control" placeholder="Type here...">
                        </div>
                    </div>
                    <ul class="navbar-nav  justify-content-end">
                        <li class="nav-item d-flex align-items-center">
                            <a href="javascript:;" class="nav-link text-body font-weight-bold px-0">
                                <i class="fa fa-user me-sm-1"></i>
                                <span class="d-sm-inline d-none">@HttpContext.Session.GetString("_Name")</span>
                            </a>
                        </li>
                        <li class="nav-item d-xl-none ps-3 d-flex align-items-center">
                            <a href="javascript:;" class="nav-link text-body p-0" id="iconNavbarSidenav">
                                <div class="sidenav-toggler-inner">
                                    <i class="sidenav-toggler-line"></i>
                                    <i class="sidenav-toggler-line"></i>
                                    <i class="sidenav-toggler-line"></i>
                                </div>
                            </a>
                        </li>
                        <li class="nav-item px-3 d-flex align-items-center">
                            <a href="javascript:;" class="nav-link text-body p-0">
                                <i class="fa fa-cog fixed-plugin-button-nav cursor-pointer"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- End Navbar -->
        <div class="container-fluid py-4">
            <div class="row">
                <div class="col-12">
                    <div class="card mb-4">
                        <div class="card-header pb-0">
                            <h5 class="mb-0">New Product</h5>
                            <p class="text-sm mb-0">
                                Adding a new product to database.
                            </p>
                        </div>
                        <div class="card-body px-0 pb-0">
                            <form role="form" id="contact-form" method="post" autocomplete="off">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label asp-for="Product.Name"></label>
                                            <div class="input-group mb-4">
                                                <input asp-for="Product.Name" class="form-control" placeholder="" aria-label="Name" type="text">
                                            </div>
                                        </div>
                                        <div class="col-md-6 ps-2">
                                            <label>Category</label>
                                            <div class="input-group">
                                                <select asp-for="Product.CategoryId" class="form-control">
                                                    <option value="1">Drink</option>
                                                    <option value="2">Food</option>
                                                    <option value="3">Toys</option>
                                                    <option value="4">Cat Food</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 ps-2">
                                            <label asp-for="Product.Price"></label>
                                            <div class="input-group">
                                                <input asp-for="Product.Price" style="width:7em" type="number" min="0" class="form-control" placeholder="" aria-label="Last Name...">
                                            </div>
                                        </div>
                                        <div class="col-md-6 ps-2">
                                            <label>Starting quantity</label>
                                            <div class="input-group">
                                                <input asp-for="Product.Quantity" style="display:flex" type="number" min="0" class="form-control" placeholder="" aria-label="Last Name...">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-4">
                                        <label asp-for="Product.ImageUrl"></label>
                                        <div class="input-group">
                                            <input asp-for="Product.ImageUrl" type="text" class="form-control" placeholder="">
                                        </div>
                                    </div>
                                    <div class="form-group mb-4">
                                        <label asp-for="Product.Description"></label>
                                        <textarea asp-for="Product.Description" class="form-control" id="message" rows="4"></textarea>
                                    </div>
                                    <div class="row">
                                        <div>
                                            <div asp-validation-summary="All" class="text-danger"></div>
                                        </div>
                                        <div class="col-md-12">
                                            <button type="submit" class="btn bg-gradient-dark w-100">CREATE</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <div class="card-body">
                                <div class="col-md-12 d-flex align-items-center justify-content-center">
                                    <a href="/ProductManagement">
                                        <button type="button" class="btn bg-gradient-danger w-100">
                                            BACK TO LIST
                                        </button>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
