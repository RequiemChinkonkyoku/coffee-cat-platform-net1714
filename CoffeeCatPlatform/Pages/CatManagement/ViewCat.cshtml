@page "/ViewCat"
@model CoffeeCatPlatform.Pages.CatManagement.CatViewModel
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "ViewCat";
}

<h1>View All Cats</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Breed</th>
            <th>Birthday</th>
            <th>Health Status</th>
            <th>Image</th>
            <th>Actions</th>
            <!-- Add more headers based on your Cat model properties -->
        </tr>
    </thead>
    <tbody>
        @foreach (var cat in Model.Cats)
        {
            <tr>
                <td>@cat.Name</td>
                <td>@cat.Breed</td>
                <td>@cat.Birthday.ToShortDateString()</td>
                @if (cat.HealthStatus == 1)
                {
                    <td>
                        <p>
                            Available
                        </p>
                    </td>
                }
                else
                {
                    <td>
                        <p>
                            Unavailable
                        </p>
                    </td>
                }
                <td>
                    <img src="@cat.ImageUrl" alt="Cat Image" style="max-width: 100px; max-height: 100px;" />
                </td>
                <td>
                    <a asp-page="./EditCat" asp-route-id="@cat.CatId">Edit</a> |
                    <a asp-page="./DeleteCat" asp-route-id="@cat.CatId">Delete</a>
                </td>
                <!-- Add more cells based on your Cat model properties -->
            </tr>
        }
    </tbody>
</table>

<section class="py-3">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <h3 class="mb-5">Cat List</h3>
            </div>
        </div>
        <div class="row">
            @foreach (var cat in Model.Cats)
            {
                <div class="col-lg-3 col-sm-6">
                    <div class="card card-plain card-blog">
                        <div class="card-image border-radius-lg position-relative">
                            <a href="javascript:;">
                                <img class="w-100 border-radius-lg move-on-hover shadow"
                                     src="@cat.ImageUrl"
                                     alt="Cat Image" style="max-width:300px; max-height:200px; display:block; width:auto; height:auto; min-width:300px; min-height:200px" />
                            </a>
                        </div>
                        <div class="card-body px-0">
                            <h5>
                                <a href="javascript:;" class="text-dark font-weight-bold">
                                    @cat.Name
                                </a>
                            </h5>
                            <p id="desc" style="-webkit-box-orient:vertical; -webkit-line-clamp:3; display:-webkit-box; width:100%; overflow:hidden">
                                @cat.Description
                            </p>
                            <a href="javascript:;" class="text-info icon-move-right">
                                Read More
                                <i class="fas fa-arrow-right text-sm"></i>
                                <a asp-page="./EditCat" asp-route-id="@cat.CatId">Edit</a> |
                                <a asp-page="./DeleteCat" asp-route-id="@cat.CatId">Delete</a>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>


<a asp-page="./CreateCat">Create Cat</a>

