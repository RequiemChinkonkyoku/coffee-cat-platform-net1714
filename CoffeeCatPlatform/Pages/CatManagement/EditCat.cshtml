@page
@model CoffeeCatPlatform.Pages.CatManagement.EditCatModel
@{
}
<h1>Edit Cat</h1>

<form method="post">
    <div>
        <label asp-for="Cat.CatId"></label>
        <input asp-for="Cat.CatId" class="form-control" readonly />
    </div>

    <div>
        <label asp-for="Cat.Name"></label>
        <input asp-for="Cat.Name" class="form-control" />
        <span asp-validation-for="Cat.Name" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Cat.Breed"></label>
        <input asp-for="Cat.Breed" class="form-control" />
        <span asp-validation-for="Cat.Breed" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Cat.Birthday"></label>
        <input asp-for="Cat.Birthday" class="form-control" type="date" />
        <span asp-validation-for="Cat.Birthday" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Cat.HealthStatus"></label>
        <select asp-for="Cat.HealthStatus" class="form-control">
            <option value="0">Unavailable</option>
            <option value="1">Available</option>
        </select>
        <span asp-validation-for="Cat.HealthStatus" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Cat.ImageUrl"></label>
        <input asp-for="Cat.ImageUrl" class="form-control" />
        <span asp-validation-for="Cat.ImageUrl" class="text-danger"></span>
    </div>
    <!-- Add more fields based on your Cat model properties -->

    <button type="submit">Save Changes</button>
</form>