@page "/DeleteArea"
@model CoffeeCatPlatform.Pages.AreaManagement.DeleteAreaModel

@{
    ViewData["Title"] = "DeleteArea";
}

<h1>DeleteArea</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Area</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Area.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Area.Location)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Area.AreaId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./ViewArea">Back to Area List</a>
    </form>
    <span>
        @if (ModelState["ErrorMessage"] != null)
        {
            @ModelState["ErrorMessage"].Errors.First().ErrorMessage
        }
    </span>
    
</div>

