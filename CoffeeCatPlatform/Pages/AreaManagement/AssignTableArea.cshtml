@page "/AssignTableArea"
@model CoffeeCatPlatform.Pages.AreaManagement.AssignTableAreaModel

@{
    ViewData["Title"] = "AssignTableArea";
}

<h1>AssignTableArea</h1>

<h4>Table</h4>

<h4>@Model.Table.TableId</h4>

<p>
    Seat Count: @Model.Table.SeatCount
    <br>
    Status: @Model.Table.Status
    <br>
</p>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Table.TableId" />
            <div class="form-group">
                <label asp-for="Table.AreaId" class="control-label"></label>
                <select asp-for="Table.AreaId" class="form-control" asp-items="ViewBag.AreaId">
                    <option value="1">Indoor Seating</option>
                    <option value="2">Outdoor Patio</option>
                    <option value="3">Private Lounge</option>
                </select>
                <span asp-validation-for="Table.AreaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./ViewArea">Back to View Area</a>
</div>