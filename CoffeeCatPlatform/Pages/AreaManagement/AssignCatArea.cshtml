@page "/AssignCatArea"
@model CoffeeCatPlatform.Pages.AreaManagement.AssignCatAreaModel

@{
    ViewData["Title"] = "AssignCatArea";
}

<h1>AssignCatArea</h1>

<h4>@Model.Cat.Name</h4>

<p>
    Breed: @Model.Cat.Breed
    <br>
    Birthday: @Model.Cat.Birthday
    <br>
    @Model.Cat.Description
</p>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AreaCat.AreaCatId" />
            <div class="form-group">
                <label asp-for="AreaCat.AreaId" class="control-label"></label>
                <select asp-for="AreaCat.AreaId" class="form-control" asp-items="ViewBag.AreaId"></select>
                <option value="1">Indoor Seating</option>
                <option value="2">Outdoor Patio</option>
                <option value="3">Private Lounge</option>
                <span asp-validation-for="AreaCat.AreaId" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
