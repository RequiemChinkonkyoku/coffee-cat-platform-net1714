@page "/StaffAccountUpdate"
@model CoffeeCatPlatform.Pages.AccountManagement.StaffAccountUpdateModel

@{
    ViewData["Title"] = "StaffAccountUpdate";
}

<h1>Update Staff Account</h1>

<h4>Staff</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Staff.StaffId" />
            <div class="form-group">
                <label asp-for="Staff.Name" class="control-label"></label>
                <input asp-for="Staff.Name" class="form-control" />
                <span asp-validation-for="Staff.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff.Gender" class="control-label"></label>
                <select asp-for="Staff.Gender" class="form-control">
                    <option value="0">Male</option>
                    <option value="1">Female</option>
                </select>
                <span asp-validation-for="Staff.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff.Phone" class="control-label"></label>
                <input asp-for="Staff.Phone" class="form-control" />
                <span asp-validation-for="Staff.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff.Email" class="control-label"></label>
                <input asp-for="Staff.Email" class="form-control" />
                <span asp-validation-for="Staff.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff.Password" class="control-label"></label>
                <input asp-for="Staff.Password" class="form-control" />
                <span asp-validation-for="Staff.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff.Status" class="control-label"></label>
                <select asp-for="Staff.Status" class="form-control" >
                    <option value="0">Inactive</option>
                    <option value="1">Active</option>
                </select>
                <span asp-validation-for="Staff.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff.RoleId" class="control-label"></label>
                <select asp-for="Staff.RoleId" class="form-control" asp-items="ViewBag.RoleId">
                    <option value="1">Manager</option>
                    <option value="2">Staff</option>
                </select>
                <span asp-validation-for="Staff.RoleId" class="text-danger"></span>
            </div>
            @if (TempData["StaffUpdateErrorMessage"] !=null)
            {
                <div>
                @TempData["StaffUpdateErrorMessage"]
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
