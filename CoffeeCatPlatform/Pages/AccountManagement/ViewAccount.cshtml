@page "/ViewAccount"
@model CoffeeCatPlatform.Pages.AccountManagement.ViewAccountModel
@using Microsoft.AspNetCore.Http
@{
}


<h1>Account List</h1>

<h2>Customer Account</h2>

<table>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Customers[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customers[0].Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customers[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customers[0].Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customers[0].Status)
            </th>
            <th>

            </th>
        </tr>
    </thead>
   
    @if (!Model.result)
    {
        <tr>
            <td>
                There are no products.
            </td>
        </tr>
    }
    else
    {
        <tbody>
            @foreach (var CustomerAccount in Model.Customers)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelAccount => CustomerAccount.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelAccount => CustomerAccount.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelAccount => CustomerAccount.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelAccount => CustomerAccount.Password)
                    </td>

                    @if (CustomerAccount.Status == 1)
                    {
                        <td>Active</td>
                    }
                    else
                    {
                        <td>Inactive</td>
                    }
                    <td>
                        <!--
                        <a asp-page="./MenuEdit" asp-route-id="@CustomerAccount.CustomerId">Edit</a> |
                        -->
                        <a asp-page="./CustomerAccountDelete" asp-route-id="@CustomerAccount.CustomerId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    }
</table>

